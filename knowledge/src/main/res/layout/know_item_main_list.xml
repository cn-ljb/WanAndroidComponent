<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/comm_shape_round_color_fff_8"
    android:padding="@dimen/dp_10"
    tools:viewBindingIgnore="true">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_FD7A04"
        android:textSize="@dimen/sp_18"
        tools:text="开发环境" />

    <TextView
        android:id="@+id/tv_msg"
        tools:text="Android Studio相关  Android Studio相关  Android Studio相关  Android Studio相关  Android Studio相关"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_alignStart="@id/tv_name"
        android:layout_alignLeft="@id/tv_name"
        android:layout_marginEnd="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_45" />


    <ImageView
        android:src="@mipmap/know_icon_nav_right"
        android:scaleType="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentEnd="true" />


</RelativeLayout>