<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:banner="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <com.youth.banner.Banner
            banner:banner_loop_time="3000"
            banner:banner_auto_loop="true"
            banner:banner_infinite_loop="true"
            banner:banner_orientation="horizontal"
            banner:banner_radius="@dimen/dp_8"
            banner:banner_indicator_normal_width="@dimen/dp_5"
            banner:banner_indicator_selected_width="@dimen/dp_8"
            banner:banner_indicator_height="@dimen/dp_8"
            banner:banner_indicator_normal_color="@color/white"
            banner:banner_indicator_selected_color="@color/color_4FFDFD"
            banner:banner_indicator_space="@dimen/dp_5"
            banner:banner_indicator_gravity="center"
            banner:banner_indicator_marginBottom="@dimen/dp_15"
            banner:banner_indicator_radius ="@dimen/dp_5"
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"/>


    </LinearLayout>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

