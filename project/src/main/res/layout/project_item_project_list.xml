<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/comm_selector_btn_white_to_gray"
    tools:viewBindingIgnore="true">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_160"
        android:layout_margin="@dimen/dp_10"
        android:scaleType="fitCenter"
        tools:src="@mipmap/comm_def_img" />


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_toEndOf="@id/iv_img"
        android:layout_toRightOf="@id/iv_img"
        android:src="@mipmap/project_icon_github" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toEndOf="@id/iv_icon"
        android:layout_toRightOf="@id/iv_icon"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_16"
        tools:text="雷小歪" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_icon"
        android:layout_alignStart="@id/iv_icon"
        android:layout_alignLeft="@id/iv_icon"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:minHeight="@dimen/dp_80"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp_14"
        tools:text="文章内容文章内容文章内容文章内容文章内容文章内容文章内容" />


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_desc"
        android:layout_alignStart="@id/iv_icon"
        android:layout_alignLeft="@id/iv_icon"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawablePadding="@dimen/dp_3"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp_11"
        app:drawableLeftCompat="@mipmap/comm_icon_home_list_time"
        tools:text="刚刚" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_time"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/color_666"
        android:textSize="@dimen/sp_14"
        tools:text="作者" />

</RelativeLayout>