<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_centerInParent="true"
        android:src="@mipmap/project_icon_github" />

    <com.ljb.android.comm.weiget.ProgressWheel
        android:id="@+id/pw_loading"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        wheel:matProg_barColor="@color/color_red"
        wheel:matProg_barWidth="3dp"
        wheel:matProg_progressIndeterminate="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pw_loading"
        android:layout_centerHorizontal="true"
        android:paddingStart="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:text="@string/comm_loading"
        android:textColor="@color/color_red"
        android:textSize="@dimen/sp_14"
        tools:ignore="RtlSymmetry" />

</RelativeLayout>