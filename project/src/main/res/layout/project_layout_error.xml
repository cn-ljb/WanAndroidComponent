<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_page_error"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_120"
        android:layout_centerInParent="true"
        android:src="@mipmap/project_icon_error" />

    <TextView
        android:id="@+id/btn_page_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_page_error"
        android:layout_centerInParent="true"
        android:background="@drawable/project_shape_round_color_red_8"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_5"
        android:text="@string/comm_page_error"
        android:textColor="@color/color_red" />


</RelativeLayout>